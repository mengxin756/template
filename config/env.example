# 应用环境
ENVIRONMENT=development
SERVICE=classic-api
VERSION=1.0.0

# HTTP 服务
HTTP_ADDRESS=:8080
HTTP_READ_TIMEOUT=10s
HTTP_WRITE_TIMEOUT=20s
HTTP_IDLE_TIMEOUT=60s
HTTP_MAX_HEADER_BYTES=1048576
HTTP_ENABLE_CORS=true
HTTP_ENABLE_METRICS=true
HTTP_ENABLE_HEALTH=true

# 日志
LOG_LEVEL=debug
LOG_ENCODING=json
LOG_DEVELOPMENT=true
LOG_SERVICE=classic-api
LOG_OUTPUT=stdout

# 数据库
DB_DRIVER=sqlite
DB_DSN=file:ent?mode=memory&cache=shared&_fk=1
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=
DB_PASSWORD=
DB_DATABASE=classic
DB_CHARSET=utf8mb4
DB_MAX_OPEN=100
DB_MAX_IDLE=10
DB_MAX_LIFETIME=1h
DB_AUTO_MIGRATE=true
DB_LOG_LEVEL=warn

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5
REDIS_MAX_RETRIES=3
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s

# Asynq
ASYNQ_REDIS_ADDR=localhost:6379
ASYNQ_REDIS_PASSWORD=
ASYNQ_REDIS_DB=1
ASYNQ_CONCURRENCY=10
ASYNQ_STRICT_PRIORITY=false
ASYNQ_SHUTDOWN_TIMEOUT=30s

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=classic-consumer
KAFKA_TOPIC=classic-events
KAFKA_PARTITIONS=3
KAFKA_REPLICAS=1
KAFKA_RETENTION=168h
KAFKA_MAX_MESSAGE_BYTES=1048576
